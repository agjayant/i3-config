        font pango: Roboto Mono for Powerline 10
        colors {
                background #0F1013
                statusline #FFFFFF
                separator #FFFFFF
                focused_workspace #0F1013 #0F1013 #FFFF5F
                active_workspace #0F1013 #0F1013 #FFFF5F
                inactive_workspace #0F1013 #0F1013 #AAAAAA
                urgent_workspace #FF005E #FF005E #FFFFFF
        }
        #position top
}


